<div class="container">
  <div class="row pt-3">
    <div class="col-8 mx-auto">
      <h4 class="text-center mb-3">
      <%= link_to(post_recipe_path(@post_recipe), class: "text-dark") do %>
        <%= @post_recipe.title %>
      <% end %>へのコメントを書く
      </h4>
      <%= form_with model: @post_comment, url: post_recipe_post_comments_path, method: :POST, local: true do |f| %>
        <%= f.text_field :comment, placeholder: "コメントを書く", class: "form-control me-2" %>
        <div class="text-center mt-3"><%= f.submit "コメントする", class:"btn btn-success font-weight-bold px-4" %></div>
      <% end %>
      <h5 class="mt-3 mb-3">
        <%= link_to(post_recipe_path(@post_recipe), class: "text-dark") do %>
          <%= @post_recipe.title %>
        <% end %>のコメント　<%= @post_comment_count %>件
      </h5>
      <% if @post_comment_count == 0 %>
        <p>
          コメントはまだありません。<br>
          <%= @post_recipe.title %>に対するコメントを書こう！
        </p>
      <% else %>
        <% @post_comments.each do |post_comment| %>
          <table class="mt-3 table border-bottom">
            <tbody class="table-borderless">
              <tr>
                <td colspan="2"><%= post_comment.comment %></td>
                <td></td>
              </tr>
              <tr>
                <td class="col-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= image_tag post_comment.user.get_profile_image(30,30) %><%= post_comment.user.name %></td>
                <td class="col-3 text-right">
                <% if post_comment.user = current_user %>
                  <%= link_to("削除する", post_recipe_post_comment_path(post_comment.post_recipe, post_comment), method: :delete, class: "btn btn-danger font-weight-bold px-4 mx-1") %>
                <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </div>
  </div>
</div>