<div class="row form-group nested-fields">
  <div class="col-9 col-md-3 order-md-1 mb-2">
    <%= f.text_field :food_name, placeholder: 'キャベツ', class: "form-control" %>
  </div>
  <div class="col-3 mx-auto col-md-2 order-md-5 mb-2">
    <%= link_to_remove_association '削除', f, class: "btn btn-outline-secondary btn-block" %>
  </div>
  <div class="col-5 col-md-3 order-md-2">
    <%= f.text_field :other_amount, placeholder: '小さじ、大', class: "form-control" %>
  </div>
  <div class="col-3 col-md-2 order-md-3">
    <%= f.number_field :amount, placeholder: '0.5', step: "0.1", min: 0, max: 2000, class: "form-control" %>
  </div>
  <div class="col-4 col-md-2 order-md-4">
    <%= f.text_field :unit, placeholder: '個、g', class: "form-control" %>
  </div>
</div>
