<div class="text-center mx-auto">
  <% if @post_recipe.errors.any? %>
    <%= @post_recipe.errors.count %>件のエラーが発生しました
    <% @post_recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
</div>
<div class="container mt-3 mb-5">
  <h4 class="text-center mb-3">レシピを書く</h4>
  <%= form_with model: @post_recipe, local: true do |f| %>
    <div class="row pt-3">
      <div class="col-12 col-lg-8 mx-auto field">
        <%= render 'public/post_recipes/form', f: f %>
        <div class="row pt-3 pb-5">
          <div class="mx-auto mt-2">
            <%= f.submit "レシピを公開", :name => 'post', class:'mx-2 btn btn-success' %>
            <%= f.submit "下書きに保存", :name => 'draft', class:'mx-2 btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
