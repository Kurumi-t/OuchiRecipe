<div class="container">
  <h3>レシピを書く</h3>
  <div class="row pt-3">
  <%= form_with model: @post_recipe, url: post_recipes_path, method: :POST, local: true do |f| %>
    <div class="col-10 field">
      <h4>料理の写真をのせる<%= f.file_field :image, accept: "image/*" %></h4>
    </div>
    <div class="col-10 field">
      <h4>レシピのタイトル（20文字まで）</h4>
      <%= f.text_field :title, maxlength: '20', placeholder: 'ハンバーグ', class: "mx-5" %>
    </div>
    <div class="actions">
      <%= f.submit 'レシピを投稿する', class:"btn btn-success font-weight-bold px-4" %>
    </div>
  <% end %>
  </div>
  <div class="row pt-3">
  <%= form_with model: @ingredient, url: ingredints_path, method: :POST, local: true do |f| %>
    <div class="col-10 field">
      <h4>材料</h4>
      <%= f.text_field :serving, placeholder: '2人分', class: "mx-5" %>
    </div>
    <table class="col-10 mt-3 table border-bottom">
      <thead class="bg-light">
        <tr>
          <th class="col-2">ジャンル</th>
          <th class="text-center">食材・調味料</th>
          <th class="text-center">分量</th>
          <th class="text-center"></th>
          <th class="text-center">その他分量</th>
        </tr>
      </thead>
      <tbody class="table-borderless">
        <tr>
          <td class="align-middle">
            <%= form_with model: @post_recipe, url: post_recipe_path, method: :PATCH, local: true do |f| %>
              <%= f.select :genre, Food.genres.keys.map { |k| [I18n.t("enums.food.genre.#{k}"), k]},{},{class:"form-control form-control-sm text-center"} %></td>
            <% end %>
          <td><%= f.select :food_id, @foods.map{ |food| [food.food_name, food.id] }, {prompt: "選択してください"},{class:"form-control form-control-sm text-center"} %></td>
          <td class="align-middle"><%= f.number_field :amount, step: "0.1", class: "mx-5", min: 0, max: 2000 %></td>
          <td class="align-middle">unit</td>
          <td class="align-middle"><%= f.text_field :other_amount, placeholder: '小さじ１', class: "mx-5" %></td>
        </tr>
      </tbody>
      <%= javascript_pack_tag 'select_change' %>
    </table>
    <div class="actions">
      <%= f.submit 'レシピを投稿する', class:"btn btn-success font-weight-bold px-4" %>
    </div>
  <% end %>
  </div>
  <div class="row pt-3">
  <%= form_with model: @ingredient, url: ingredints_path, method: :POST, local: true do |f| %>
    <h4>作り方</h4>
    <div class="col-10 field">
      ①<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ②<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ③<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ④<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ⑤<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ⑥<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ⑦<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ⑧<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ⑨<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="col-10 field">
      ⑩<%= f.text_field :last_name, class: "form-control border-dark" %>
    </div>
    <div class="actions">
      <%= f.submit 'レシピを投稿する', class:"btn btn-success font-weight-bold px-4" %>
    </div>
  </div>
  <% end %>
  <div class="row pt-3">
  <%= form_with model: @post_recipe, url: post_recipes_path, method: :POST, local: true do |f| %>
    <div class="col-10 field">
      <h4>コツ・おすすめ・ひとこと</h4>
      <%= f.text_area :advice, class: "form-control border-dark" %>
    </div>
    <div class="actions">
      <%= f.submit 'レシピを投稿する', class:"btn btn-success font-weight-bold px-4" %>
    </div>
  <% end %>
  </div>
</div>

