<div class="container">
  <h2>新規登録</h2>
  <div class="row mt-5">
    <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :ユーザー名 %><br>
      <%= f.text_field :name, placeholder: 'Ouchi-user', class: "form-control border-dark" %>
    </div>
    <div class="field">
      <%= f.label :メールアドレス %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control border-dark" %>
    </div>
    <div class="field">
      <%= f.label :パスワード %><br>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-dark" %>
    </div>
    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-info btn-block" %>
    </div>
    <% end %>
    <div class="col-md-8 offset-md-1 mt-5">
      <p>
        <span class="bg-light">登録がお済みの方は</span>
        <u><%= link_to "こちら", new_user_session_path %></u>
      </p>
    </div>
  </div>
</div>