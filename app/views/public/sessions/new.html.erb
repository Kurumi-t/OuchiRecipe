<div class="container">
  <h3 class="text-center">ユーザーログイン</h3>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row mt-4">
      <div class="col-5 col-md-5 text-right">
        メールアドレス
      </div>
      <div class="col-7 col-md-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control border-dark" %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-5 col-md-5 text-right">
        パスワード
      </div>
      <div class="col-7 col-md-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-dark" %>
      </div>
    </div>
    <div class="row actions mt-4">
      <%= f.submit "ログイン", class:"col-4 col-md-2 btn btn-info mx-auto" %>
    </div>
  <% end %>
  <div class="row mt-4">
    <p class="mx-auto">
      <span class="bg-light">登録がお済みでない方は</span>
      <%= link_to "こちら", new_user_registration_path %>
    </p>
  </div>
</div>