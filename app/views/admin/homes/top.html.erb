<div class="container">
  <div class="row pt-3">
    <div class="col-8 mx-auto">
      <h4 class="text-center mb-3">おうちレシピユーザー</h4>
      <table class="mt-3 table border-bottom">
        <thead class="table-borderless text-center">
          <tr>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody class="table-borderless text-center">
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to(admin_user_path(user.id), class: "text-dark") do %><%= user.name %><% end %></td>
            <td><%= user.email %></td>
            <td class="align-middle text_left">
              <% if user.is_deleted == false %>
                <b class="text-success">有効</b>
              <% else %>
                <b class="text-black-50">退会</b>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
