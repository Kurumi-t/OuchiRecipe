<div class="container">
  <div class="row mx-auto">
    <div class="col-12 col-lg-5 mx-auto mb-3">
    <h4 class="text-center mb-2"><%= @user.name %>さんのユーザー情報詳細</h4>
      <div class="row pt-3">
        <div class="col-5 text-right mb-2">ID</div>
        <div class="col-6 offset-1">
          <%= @user.id %>
        </div>
        <div class="col-5 text-right mb-2">ユーザー名</div>
        <div class="col-6 offset-1">
          <%= @user.name %>
        </div>
        <div class="col-5 text-right mb-2">メールアドレス</div>
        <div class="col-6 offset-1">
          <%= @user.email %>
        </div>
        <div class="col-5 text-right mb-2">ステータス</div>
        <div class="col-6 offset-1">
          <% if @user.is_deleted == false %>
            <b class="text-success">有効</b>
          <% else %>
            <b class="text-black-50">退会</b>
          <% end %>
        </div>
        <div class="col-12 text-center mx-auto mt-2">
          <%= link_to("編集する", edit_admin_user_path(@user.id), class: "btn btn-outline-success mx-2 mb-2") %>
        </div>
        <div class="col-12 text-center mx-auto mt-2">
          <%= link_to(admin_user_post_comment_path(@user.id), class: "btn btn-outline-info mx-2 mb-2") do %>
            <%= @user.name %>さんのコメント一覧を見る
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-7 mx-auto">
      <h4 class="text-center mb-3"><%= @user.name %>さんのレシピ<span class="ml-3"><%= @post_recipe_count %>品</span></h4>
      <div class="row text-center pt-3">
        <% @post_recipes.each do |post_recipe| %>
          <div class="col-6 col-sm-3">
            <%= link_to(post_recipe_path(post_recipe.id), class: "text-dark") do %>
              <%= image_tag post_recipe.get_recipe_image(270,150), class:"img-fluid rounded" %>
              <p><%= post_recipe.title %></p>
            <% end %>
          </div>
        <% end %>
        <div class="col-12 mx-auto">
          <%= paginate @post_recipes %>
        </div>
      </div>
    </div>
  </div>
</div>