<div class="container">
  <div class="row pt-3">
    <div class="col-8 mx-auto">
      <h4 class="text-center mb-3">
        <%= link_to(admin_user_path(@user.id), class: "text-dark") do %>
          <%= @user.name %>
        <% end %>のコメント　<%= @post_comment_count %>件
      </h4>
      <% if @post_comment_count == 0 %>
        <p>コメントはまだありません。</p>
      <% else %>
        <% @post_comments.each do |post_comment| %>
          <table class="mt-3 table border-bottom">
            <tbody class="table-borderless">
              <tr>
                <td colspan="2"><%= post_comment.comment %></td>
                <td></td>
              </tr>
              <tr>
                <td class="col-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                  <%= link_to(admin_post_recipe_path(post_comment.post_recipe.id), class: "text-dark") do %>
                    <%= post_comment.post_recipe.title %>
                  <% end %>
                </td>
                <td class="col-5 text-right"><%= link_to("このレシピのコメント一覧へ", admin_post_recipe_post_comments_path(post_comment.post_recipe, post_comment), class: "btn btn-info font-weight-bold px-4 mx-1") %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </div>
  </div>
</div>